{
    "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": ".",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
        "~*": ["./src/*"]
      }
    },
    "include": ["src", "src/static/svgs/svg.d.ts"],
    "exclude": [
      "node_modules",
      "build",
    ],
    "types": [
      "typePatches"
    ]
  }